%p{class: 'pt-3'}
  %b Title:
  = @post.title
%p
  %b Body:
  = @post.body
%p
  %strong Cover Photo:
  - if @post.cover_photo.attached?
    = image_tag (@post.cover_photo), class: 'img-fluid mb-3 text-center'
  - else
    %span Sin foto que mostrar

%br/
= link_to 'Edit', edit_post_path(@post), class: 'btn btn-success mb-4'
\|
= link_to 'Back', posts_path, class: 'btn btn-danger mb-4'
