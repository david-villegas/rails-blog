.container.mt-5
  .row.justify-content-center
    #login-column.col-md-6
      #login-box.col-md-12
        %h3.text-center.text-info.mt-3 Login
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.label :email, class: 'text-info'
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
          .form-group
            = f.label :password, class: 'text-info'
            %br/
            = f.password_field :password, autocomplete: "current-password", class: 'form-control'
          - if devise_mapping.rememberable?
            .form-group
              .row.justify-content-between
                .col-md-6.text-left
                  = f.label :remember_me, class: 'text-info'
                  = f.check_box :remember_me
                .col-md-6.text-right
                  = link_to "Forgot your password?", new_password_path(resource_name), class: 'text-info'
          .actions
            = f.submit "Log in", class: 'btn btn-info'
          = link_to "Sign up", new_registration_path(resource_name), class: 'text-info'
          %br/
          = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'text-info'
          -# = render "devise/shared/links"
