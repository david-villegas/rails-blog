.jumbotron.text-center.bg-white
  %h1 Hello, World!
  %p{class: 'lead'}Guide you step by step learning Ruby on Rails through building a Blog application.
  %br/
  %a{href:'https://fullstackrubyonrails.com', class: 'btn btn-primary btn-lg', role:'button', target:'_blank'}Learn more

.posts.pb-md-4
  .container
    .row
      - @posts.each do |post|
        %section{class: 'col-md-4 py-2'}
          .card.bg-light.border-info.mb-4.shadow.h-100
            -# -if post.body.embeds.present?
            -#   .card-img-top
            -#     = image_tag (post.body.embeds.first), class: 'img-fluid'
            .card-body.text-secondary
              %h5{class: 'card-title'}=post.title
              .card-text
                %p=truncate(strip_tags(post.rich_text_body.to_s), length: 150)
            .card-footer.text-right
              %a{href: post_path(post.id), class:'btn btn-info'}Leer Mas...

.container
  .row.justify-content-center
    = will_paginate @posts

